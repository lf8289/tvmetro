<?xml version="1.0" encoding="utf-8"?>
<com.example.tvmetro.view.ActionMetroItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <!-- android:clipToPadding="false" -->

    <com.example.tvmetro.view.AsyncImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/menu_absolute"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal" >

        <com.example.tvmetro.view.AsyncImageView
            android:id="@+id/ation_left"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <com.example.tvmetro.view.AsyncImageView
            android:id="@+id/ation_right"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:layout_gravity="bottom"
        android:background="#96000000"
        android:gravity="left|center"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:singleLine="true"
        android:text="hello"
        android:textColor="@android:color/white"
        android:textSize="20.0sp"
        android:visibility="invisible" />

</com.example.tvmetro.view.ActionMetroItemView>